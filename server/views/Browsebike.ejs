<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>WiselyWheel</title>
    <style>
      
      h3 {
        text-align: center;
        font-size: 25px;
      }
      .filters {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 20px;
      }

      .filters button {
        padding: 10px 20px;
        font-size: 25px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s, border-bottom 0.3s;
        margin-right: 10px;
        color: #333;
        position: relative;
      }

      .filters button:hover {
        background-color: #ddd;
      }

      .filters button::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 50%;
        width: 0;
        height: 2px;
        background-color: green;
        transition: width 0.3s ease-out, left 0.3s ease-out;
      }

      .filters button:hover::after,
      .filters button.active::after {
        width: calc(100% - 40px);
        left: 20px;
      }

      .options-container {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
        transition: 0.3s;
      }

      .option-group {
        display: none;
        width: 100%;
        align-items: center;
      }

      .option-group.active {
        display: flex;
      }

      .option {
        flex: 1 1 200px;
        margin-right: 10px;
        margin-bottom: 10px;
        overflow: hidden;
      }

      .option button {
        width: 100%;
        padding: 10px;
        font-size: 22px;
        text-align: left;
        border: none;
        background-color: transparent;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
        align-items: center;
        position: relative;
      }

      .option button:hover {
        background-color: #ddd;
      }

      .option button::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: green;
        transition: width 0.3s ease-out, left 0.3s ease-out;
        transform: scaleX(0);
      }

      .option button.active::after {
        width: 100%;
        left: 0;
        transform: scaleX(1);
      }

      .option button.active {
        background-color: green;
        color: white;
        text-decoration: underline;
      }

      .brand-img {
        width: 150px;
        height: auto;
        margin-right: 10px;
        cursor: pointer;
        transition: transform 0.3s;
      }

      .brand-img:hover {
        transform: scale(1.05);
      }

      .bike-list {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }

      .bike-item {
        flex: 0 0 calc(33.333% - 20px);
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: transform 0.3s;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        align-items: center;
      }

      .bike-item:hover {
        transform: translateY(-5px);
      }

      .bike-item img {
        width: 100%;
        height: auto;
        margin-bottom: 10px;
      }

      .bike-item h4 {
        margin: 0;
        margin-bottom: 5px;
        font-size: 18px;
      }

      .bike-item p {
        margin: 0;
        font-size: 22px;
        color: black;
      }
    </style>
  </head>
  <body>
    <header>
      <img
        src="/image/logo.png"
        alt="WiselyWheel"
        width="150mm"
        height="100mm"
      />
      <nav>
        <ul>
          <li><a href="/index">Home</a></li>
          <li><a href="/browse">Browse Bikes</a></li>
          <li><a href="/compare">Compare Bikes</a></li>
          <li><a href="/aboutus">About Us</a></li>
          <li><a href="#" onclick="confirmLogout()">Logout</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h3>Browse Bike By</h3>

      <div class="filters">
        <button onclick="showBrand()" id="brandBtn" class="active">
          Brand
        </button>
        <button onclick="showPrice()" id="priceBtn">Price</button>
      </div>

      <div class="options-container">
        <div class="option-group brand-options active" id="brandOptions">
          <div class="option">
            <img
              src="/image/honda.png"
              alt="Honda"
              class="brand-img"
              onclick="loadBikesByBrand('Honda')"
            />
          </div>
          <div class="option">
            <img
              src="/image/yamaha.png"
              alt="Yamaha"
              class="brand-img"
              onclick="loadBikesByBrand('Yamaha')"
            />
          </div>
          <div class="option">
            <img
              src="/image/bajaj.png"
              alt="Bajaj"
              class="brand-img"
              onclick="loadBikesByBrand('Bajaj')"
            />
          </div>

          <div class="option">
            <img
              src="/image/TVS.png"
              alt="TVS"
              class="brand-img"
              onclick="loadBikesByBrand('TVS')"
            />
          </div>
          <div class="option">
            <img
              src="/image/Royal.png"
              alt="Royal"
              class="brand-img"
              onclick="loadBikesByBrand('Royal Enfield')"
            />
          </div>
        </div>
        <div class="option-group price-options" id="priceOptions">
          <div class="option">
            <button onclick="filterByPrice(200001, 300000)">
              Under Rs 3 Lakh
            </button>
          </div>
          <div class="option">
            <button onclick="filterByPrice(300001, 400000)">
              Under Rs 4 Lakh
            </button>
          </div>

          <div class="option">
            <button onclick="filterByPrice(400001, 500000)">
              Under Rs 5 Lakh
            </button>
          </div>

          <div class="option">
            <button onclick="filterByPrice(500001, 600000)">
              Under Rs 6 Lakh
            </button>
          </div>
          <div class="option">
            <button onclick="filterByPrice(600001, 800000)">
              Under Rs 8 Lakh
            </button>
          </div>
        </div>
      </div>

      <div class="bike-list" id="bikeList"></div>
    </main>

    <footer>
      <p>&copy; 2024 WiselyWheel. All rights reserved.</p>
    </footer>
    <script>
      function showBrand() {
        const brandOptions = document.querySelector(".brand-options");
        const priceOptions = document.querySelector(".price-options");
        const brandBtn = document.getElementById("brandBtn");
        const priceBtn = document.getElementById("priceBtn");

        brandOptions.classList.add("active");
        priceOptions.classList.remove("active");
        brandBtn.classList.add("active");
        priceBtn.classList.remove("active");

        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
      }

      function showPrice() {
        const brandOptions = document.querySelector(".brand-options");
        const priceOptions = document.querySelector(".price-options");
        const brandBtn = document.getElementById("brandBtn");
        const priceBtn = document.getElementById("priceBtn");

        brandOptions.classList.remove("active");
        priceOptions.classList.add("active");
        brandBtn.classList.remove("active");
        priceBtn.classList.add("active");

        // Hide brand options
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
      }

      function loadBikesByBrand(brand) {
        fetch(`/api/bikefeatures/brand/${brand}`)
          .then((response) => response.json())
          .then(displayBikes)
          .catch((error) =>
            console.error("Error loading bikes by brand:", error)
          );
      }

      function filterByPrice(minPrice, maxPrice) {
        fetch(`/api/bikefeatures`)
          .then((response) => response.json())
          .then((bikes) => {
            const filteredBikes = bikes.filter(
              (bike) => bike.price >= minPrice && bike.price <= maxPrice
            );
            displayBikes(filteredBikes);
          })
          .catch((error) => console.error("Error fetching bikes:", error));
      }

      function displayBikes(bikes) {
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
        bikes.forEach((bike) => {
          const bikeItem = document.createElement("div");
          bikeItem.classList.add("bike-item");
          bikeItem.innerHTML = `
                <img src="${bike.url}" alt="${bike.variant_name}" />
                <h4>${bike.variant_name}</h4>
                <p>Price: Rs ${bike.price}</p>
            `;
          bikeItem.addEventListener("click", () => {
            window.location.href = `/bikeDetails?id=${bike._id}`;
          });
          bikeList.appendChild(bikeItem);
        });
      }

      showBrand();
      function confirmLogout() {
        var username = "<%= username %>";
        if (confirm("Are you sure you want to logout, " + username + "?")) {
          window.location.href = "/";
        } else {
          alert("Thanks for staying");
          return false;
        }
      }
    </script>
  </body>
</html>
